<div class="comment-post group">
  <div class="index-author group">
    <a href='#/users/<%= post.escape('user_id') %>'>

    <% var author = users.where({id: parseInt(post.escape('user_id'))}) %>
<% if (author.length > 0) { %>
    <img class="index-author-preview" src="<%=author[0].attributes['image_url']%>"></img></a>

    <a class="index-author-preview-name" href='#/users/<%= post.escape('user_id') %>'>

      <%- author[0].attributes['name_first'] %>
      <%- author[0].attributes['name_last'] %>

<% } %>

    </a>
      <%- post.get('body') %>
      <br>
    <p>
      <% var date = new Date(post.escape('created_at')) %>
      <%= date.toLocaleDateString() %>
      at
      <%= date.toLocaleTimeString() %>
    </p>
  </div>



  <!-- <div class="post-comments">
  </div> -->



</div>



