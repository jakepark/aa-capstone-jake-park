        </select>

        <select name="user[birth_year]" id="birth_year">
          <option value="">Year</option>
          <% for (var i=2002; i >= 1905; i--) {%>
            <option value="<%= i %>"><%=i%></option>

          <% } %>
        </select>

        <br>
